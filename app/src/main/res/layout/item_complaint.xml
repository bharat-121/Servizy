<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:elevation="20dp"



    app:layout_constraintCircleRadius="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewcomp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="5dp"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fadingEdge="horizontal|vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/messengerImageViewcomp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_complaint1" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardtextcomp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"

                    android:shadowColor="#0076f0"
                    android:shadowRadius="0.1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#f7181818"
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/cardtextcomp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#f3232323"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/cardtextcomp3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textSize="15dp"/>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>